{
  "name": "@enhancer/auth-client",
  "version": "1.1.0",
  "description": "Universal client library for Enhancer Auth Service - works in Node.js and browsers",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser/index.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./middleware/express": {
      "types": "./dist/middleware/express.d.ts",
      "import": "./dist/middleware/express.mjs",
      "require": "./dist/middleware/express.js"
    },
    "./middleware/fastify": {
      "types": "./dist/middleware/fastify.d.ts",
      "import": "./dist/middleware/fastify.mjs",
      "require": "./dist/middleware/fastify.js"
    },
    "./middleware/nextauth-provider": {
      "types": "./dist/middleware/nextauth-provider.d.ts",
      "import": "./dist/middleware/nextauth-provider.mjs",
      "require": "./dist/middleware/nextauth-provider.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node build.mjs",
    "build:bun": "bun run build.ts",
    "dev": "bun run build.ts --watch",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "auth",
    "oauth2",
    "jwt",
    "authentication",
    "enhancer",
    "typescript"
  ],
  "author": "Enhancer",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "jose": "^6.1.3",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "esbuild": "^0.27.3",
    "fastify": "^4.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "fastify": "^4.26.0",
    "next-auth": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "next-auth": {
      "optional": true
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,mjs,cjs}": [
      "biome check --write"
    ]
  }
}
